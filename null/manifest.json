{
  "manifest_version": 3,
  "name": "Policy Checker",
  "version": "2.0",
  "description": "Scan, Analyze, Stay Safe - Know Your Policies!",
  "icons": {
    "16": "popup/icons/icon16.png",
    "48": "popup/icons/icon48.png",
    "128": "popup/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "popup/icons/icon16.png",
      "48": "popup/icons/icon48.png",
      "128": "popup/icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ], 
  "host_permissions": [
    "*://*/*",
    "https://api.deepseek.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}